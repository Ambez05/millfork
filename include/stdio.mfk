// target-independent standard I/O routines

import string
#if ZX_SPECTRUM
import stdio_zxspectrum
#endif


#if not(ZX_SPECTRUM)

void putstr(pointer str, byte len) {
    byte index
    index = 0
    while (index != len) {
        putchar(str[index])
        index += 1
    }
}
void putstrz(pointer str) {
    byte index
    index = 0
    while str[index] != 0 {
        putchar(str[index])
        index += 1
    }
}

#endif

