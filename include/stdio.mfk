// target-independent standard I/O routines

void putstr(pointer str, byte len) {
    byte index
    index = 0
    while (index != len) {
        putchar(str[index])
        index += 1
    }
}

void putstrz(pointer str) {
    byte index
    index = 0
    while str[index] != 0 {
        putchar(str[index])
        index += 1
    }
}

byte strzlen(pointer str) {
    byte index
    index = 0
    while str[index] != 0 {
        index += 1
    }
    return index
}
